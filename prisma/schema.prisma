generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String    @unique
  password        String?   // Optional for OAuth users
  school          String
  whatsappNumber  String
  isVendor        Boolean   @default(true)
  profileComplete Boolean   @default(false)
  
  // OAuth
  googleId        String?   // Don't use @unique on optional fields in MongoDB
  
  // Relations
  products        Product[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Product {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  description     String
  price           Float
  images          Json?     // Array of {url, publicId}
  mainImage       String?   // URL of main/first image
  school          String    // Which school this product is for
  category        String    // e.g., "Books", "Electronics", "Clothing"
  
  // Vendor relation
  vendorId        String    @db.ObjectId
  vendor          User      @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  
  // Status
  isAvailable     Boolean   @default(true)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([vendorId])
  @@index([school])
  @@index([category])
}